<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_20sdp">


    <View
        android:id="@+id/img_movie"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_220sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/round_rectangle_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/txt_movie_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/round_rectangle_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_movie" />

    <View
        android:id="@+id/txt_movie_year"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:background="@drawable/round_rectangle_4"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_movie_name" />

    <View
        android:id="@+id/txt_movie_rating"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/round_rectangle_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_movie_year" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/round_rectangle_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_movie_rating"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>